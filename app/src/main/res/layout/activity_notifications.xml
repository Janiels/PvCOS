<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hds.pvcos.NotificationsActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete selected"
        android:id="@+id/button5"
        android:layout_above="@+id/button8"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/listView2"
        android:onClick="buttonDeleteSelectedNotificationClick" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView2"
        android:layout_above="@+id/button5"
        android:choiceMode="singleChoice"
        android:listSelector="#666666"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_above="@+id/button7"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add new"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText2"
        android:onClick="buttonAddNewNotificationClick" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit selected"
        android:id="@+id/button8"
        android:layout_above="@+id/editText2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="buttonEditNotificationClick" />

</RelativeLayout>
